@using TV_Domain
@model IList<TVShow>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link href="https://fonts.googleapis.com/css?family=Playfair+Display:700,900&display=swap" rel="stylesheet" />
<link href="./css/style.css" rel="stylesheet" />

<div class="container" style="width:1150px">
    <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center" style="background-color: #2C2C2C; color: white;">
        <div class="col-12">
            <div class="d-flex flex-column align-items-center">
                <p></p>
                <p></p>

                <p style=" text-decoration: underline;">To view details of the TV station click on Show more button...!</p>

                <p></p>

                <p style=" text-decoration: underline;">To add a new TV station, click on Add new TV station button...!</p>

                <p></p>

                <p style=" text-decoration: underline;">To return to the home page, click on Return to page home button...!</p>

                <p></p>
                <p></p>

            </div>
        </div>
    </div>
    <div class="row" style="text-align:center;align-items:center;">
        <div class="col-md-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Title <i class="fas fa-film"></i></th>
                        <th>Release Date <i class="fas fa-calendar-alt"></i></th>
                        <th>Type <i class="fas fa-tags"></i></th> 
                        <th>Url <i class="fas fa-link"></i></th>
                        <th>More details <i class="fas fa-info-circle"></i></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(Model.IndexOf(item) + 1)</td>
                            <td>@item.Title</td>
                            <td>@item.ReleaseDate</td>
                            <td>
                                @item.Rating
                            </td>
                            <td>
                                <a class="button reservation" href="@item.URL">
                                     Url
                                </a>
                            </td>
                            <td>
                                <url-with-slug asp-controller="TVShow"
                                               asp-action="DetailsTVShow"
                                               for-TVShow-Id="@item.Id"
                                               for-TVShow-slug="@item.Rating.ToString().Replace(" ","-").ToLower()">
                                    <button class="button reservation" type="submit">Show more</button>
                                </url-with-slug>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-controller="Home" asp-action="Index" class="button reservation">
                <i class="fas fa-home"></i> Return to page home
            </a>
        </div>
    </div>

</div>
