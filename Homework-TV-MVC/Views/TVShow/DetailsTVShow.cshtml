@using TV_Domain
@model TVShow
<link href="~/css/DTVShow.css" rel="stylesheet" />

<body class="con">
    <header>
        <div class="container px-4 px-lg-5 h-100">
            <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
                <div class="col-md-8 col-lg-6 mt-5 p-4 card-container">
                    <!-- TV Show Image -->
                    <div class="image-container mb-4 text-center">
                        <img src="@($"/imgs/TVShow/{Model.Id}.{Model.Attachment.FileType}")"
                             alt="TV Show Image"
                             class="img-fluid tv-show-image">
                    </div>


                    <!-- Details Section -->
                    <div class="portfolio-details">
                        <h2 class="details-title">TV Show Details</h2>

                        <div class="details-list">
                            <div class="detail-item">
                                <i class="fas fa-heading icon"></i>
                                <span><strong>Title:</strong> @Model.Title</span>
                            </div>

                            <div class="detail-item">
                                <i class="fas fa-calendar-alt icon"></i>
                                <span><strong>Release Date:</strong> @Model.ReleaseDate</span>
                            </div>

                            <div class="detail-item">
                                <i class="fas fa-star icon"></i>
                                <span><strong>Rating:</strong> @Model.Rating</span>
                            </div>

                            <div class="detail-item">
                                <i class="fas fa-link icon"></i>
                                <span>
                                    <strong>URL:</strong>
                                    <a href="@Model.URL" target="_blank" class="url-link">@Model.URL</a>
                                </span>
                            </div>
                        </div>
                    </div>


                    <!-- Buttons Section -->

                    <div class="button-container">
                        <url-with-slug asp-controller="TVShow"
                                       asp-action="UpdateTVShow"
                                       for-TVShow-Id="@Model.Id"
                                       for-TVShow-slug="@Model.Rating.ToString()" class="btn btn-primary">
                            Update Info TVShow
                        </url-with-slug>
                      
                        <a asp-controller="TVShow"
                           asp-action="DeletTVShow"
                           asp-route-id="@Model.Id"
                           class="btn btn-delete">
                            Delete TVShow
                        </a>

                        <a asp-controller="TVShow"
                           asp-action="HomeTVShow"
                           class="btn btn-return">
                            Return to the TV stations page
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </header>
</body>
