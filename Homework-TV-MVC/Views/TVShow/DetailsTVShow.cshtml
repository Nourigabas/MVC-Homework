@using TV_Domain
@model TVShow

<body>
    <header>
        <div class="container px-4 px-lg-5 h-100">
            <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
                <div class="container mt-5">
                    <form>
                        <div class="d-flex flex-column align-items-center">
                            <div class="portfolio-item_Show">

                                <img class="img-fluid" src="@($"/imgs/TVShow/{Model.Id}.{Model.Attachment.FileType}")" alt="..." style="border-radius: 15px;" />
                                <!-- Details Section -->
                                <div class="portfolio-details mt-3">
                                    @*  <input type="hidden" value="@Model.Id" name="TVShowId"/>
                                    <input type="hidden" name="slug" value="@Model.Rating.ToString()" /> *@
                                    <h4><span style="font-weight: bold; text-decoration: underline;">Title:</span> @Model.Title</h4>
                                    <h4><span style="font-weight: bold; text-decoration: underline;">Release Date:</span> @Model.ReleaseDate</h4>
                                    <h4><span style="font-weight: bold; text-decoration: underline;">Rating:</span> @Model.Rating</h4>
                                    <a href="@Model.URL"><span style="font-weight: bold; text-decoration: underline;">URL:</span> @Model.URL</a>
                                </div>
                            </div>
                            <url-with-slug asp-controller="TVShow"
                                           asp-action="UpdateTVShow"
                                           for-TVShow-Id="@Model.Id"
                                           for-TVShow-slug="@Model.Rating.ToString()" class="btn btn-primary" style="background-color: #A0522D; border-color: #A0522D;">
                                Update Info TVShow
                            </url-with-slug>
                            <p></p>
                        </div>
                    </form>
                    <a asp-controller="TVShow" asp-action="DeletTVShow" asp-route-id="@Model.Id" type="submit" class="btn btn-primary" style="background-color: #A0522D; border-color: #A0522D;">Delete TVShow</a>
                    <p></p>
                    <p></p>
                    <a type="submit" asp-controller="TVShow" asp-action="HomeTVShow" type="submit" class="btn btn-primary" style="background-color: #A0522D; border-color: #A0522D;">Return to the TV stations page</a>
                </div>
            </div>
        </div>
    </header>
</body>
