@model CreateOrUpdateTVShow
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Information Input Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <header class="masthead">
        <div class="container px-4 px-lg-5 h-100">
            <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">

                <div class="container mt-5">
                    <h2 class="text-center mb-4" style="color: white;">Enter Information TV...!</h2>
                    @* تعبئة معلومات الإضافة *@
                    <form asp-controller="TVShow" asp-action="add" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        @* Title *@
                        <div class="form-group d-flex align-items-center">
                            <label asp-for="TVShow.Title" style="color: white; min-width: 100px;">Title</label>
                            <input asp-for="TVShow.Title" type="text" class="form-control" id="title" placeholder="Enter Title" required>
                            <span asp-validation-for="TVShow.Title" class="text-danger"></span>
                        </div>

                        @* Release Date *@
                        <div class="form-group d-flex align-items-center">
                            <label asp-for="TVShow.ReleaseDate" style="color: white; min-width: 100px;">Release Date</label>
                            <input type="date" class="form-control" id="releaseDate" asp-for="TVShow.ReleaseDate" required>
                            <span asp-validation-for="TVShow.ReleaseDate" class="text-danger"></span>
                        </div>

                        @* Rating *@
                        <div class="form-group d-flex align-items-center">
                            <label asp-for="TVShow.Rating" style="color: white; min-width: 100px;">Select Item</label>
                            <select class="form-control" id="selection" asp-for="TVShow.Rating" required>
                                <option value="" disabled selected>Select Rating</option>
                                <option value="Weather">Weather</option>
                                <option value="Sports">Sports</option>
                                <option value="Policy">Policy</option>
                                <option value="Series">Series</option>
                            </select>
                            <span asp-validation-for="TVShow.Rating" class="text-danger"></span>
                        </div>

                        @* URL *@
                        <div class="form-group d-flex align-items-center">
                            <label asp-for="TVShow.URL" style="color: white; min-width: 100px;">URL</label>
                            <input type="text" class="form-control" id="url" placeholder="Enter URL" asp-for="TVShow.URL" required>
                            <span asp-validation-for="TVShow.URL" class="text-danger"></span>
                        </div>

                        @* Languages *@
                        <div class="form-group d-flex align-items-center">
                            <label style="color: white; min-width: 100px; font-size: 1 rem;">Language</label>
                            <div>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="languageEnglish" asp-for="Languges.Languages[0]" value="English">
                                    <label asp-for="Languges.Languages[0]" class="form-check-label" style="color: white; font-size: 1.2rem;">English</label>
                                    <span asp-validation-for="Languges.Languages[0]" class="text-danger"></span>
                                </div>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="languageArabic" asp-for="Languges.Languages[1]" value="Arabic">
                                    <label class="form-check-label" asp-for="Languges.Languages[1]" style="color: white; font-size: 1.2rem;">Arabic</label>
                                    <span asp-validation-for="Languges.Languages[1]" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        @* Img *@
                        <div class="form-group d-flex align-items-center">
                            <label asp-for="file" style="color: white; min-width: 100px;">Choose an image</label>
                            <input asp-for="file" type="file" class="form-control" id="imageUpload" accept="image/*">
                            <span asp-validation-for="file" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary" style="background-color: #A0522D; border-color: #A0522D;">ADD</button>
                    </form>
                    <p></p>
                    <p></p>
                    <a asp-controller="TVShow" asp-action="HomeTVShow" class="btn btn-primary" style="background-color: #A0522D; border-color: #A0522D;">Return to the TV stations page</a>
                </div>

            </div>
        </div>
    </header>
</body>

</html>