<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">



@model LoginModel

<header class="masthead">
    <div class="container px-4 px-lg-5 h-100">
        <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">

            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 mb-5 text-center">To view Nouri website services, you must login..!</p>
            </div>

            <div class="col-lg-8 align-self-end">
                <div class="row gx-4 gx-lg-5 justify-content-center mb-5">
                    <div class="col-lg-6">
                        <!-- Form for login -->
                        <form id="contactForm"
                              data-sb-form-api-token="API_TOKEN"
                              asp-controller="Login"
                              asp-action="Login"
                              method="post">
                            <!-- Username input-->
                            <div class="form-floating mb-3">
                                <input class="form-control"
                                       id="Username"
                                       name="Username"
                                       type="text"
                                       placeholder="Enter your Username..."
                                       data-sb-validations="required"
                                       asp-for="Username" />

                                <label asp-for="Username">Username</label>

                                <div class="invalid-feedback"
                                     data-sb-feedback="username:required">
                                    A username is required.
                                </div>
                            </div>

                            <!-- Password input-->
                            <div class="form-floating mb-3">
                                <input class="form-control"
                                       id="password"
                                       name="Password"
                                       type="password"
                                       placeholder="Enter your password..."
                                       data-sb-validations="required"
                                       asp-for="Password" />
                                <label asp-for="Password">Password</label>
                                <div class="invalid-feedback"
                                     data-sb-feedback="password:required">
                                    A password is required.
                                </div>
                            </div>
                            <!-- Submit Button -->
                            <div class="d-grid">
                                <button class="btn btn-primary btn-xl" type="submit">
                                    <i class="fas fa-paper-plane"></i> Submit
                                </button>

                            </div>
                        </form>
                        <p></p>
                        <p></p>
                        <div class="d-grid">
                            <a asp-controller="Home"
                               asp-action="Index"
                               class="btn btn-primary btn-xl"
                               type="submit">
                                <i class="fas fa-home"></i> Return to the home page
                            </a>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</header>
